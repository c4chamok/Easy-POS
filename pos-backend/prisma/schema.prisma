generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  fullName  String
  password  String
  role      Role     @default(SELLER)
  createdAt DateTime @default(now())
}

model Product {
  id          String  @id @default(cuid())
  name        String
  sku         String  @unique
  category    String
  price       Float
  stockQty    Int
  image       String?
  description String?

  saleItems SaleItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sku])
}

model Sale {
  id            String        @id @default(cuid())
  total         Float
  paymentMethod PaymentType
  customerName  String?
  status        PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())

  items SaleItem[]
}

model SaleItem {
  id        String @id @default(cuid())
  saleId    String
  productId String

  quantity  Int
  unitPrice Float

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
}

enum PaymentType {
  CASH
  CARD
  MOBILE
}

enum PaymentStatus {
  PENDING
  COMPLETED
}

enum Role {
  SELLER
  ADMIN
}
